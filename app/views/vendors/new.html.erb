<% provide(:title, 'New Vendor') %>
<h1>Create New Vendor</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@vendor) do |f| %>
      
      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :address %>
      <%= f.text_field :address %>

      <%= f.label :image %>
      <%= f.file_field :image %>
      <br>
      <br>

      Specialities:
      <% for speciality in Speciality.find(:all) %>
        <div>
          <%= check_box_tag "vendor[speciality_ids][]", speciality.id, @vendor.specialities.include?(speciality) %>
          <%= speciality.name %>
        </div>
      <% end %>
      <br>
      <%= f.submit "Create my account", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>
